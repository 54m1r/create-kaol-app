generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
  Post Post[]
}

model Post {
  id          String   @id @default(uuid())
  publishedAt DateTime @default(now())
  title       String
  content     String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}
